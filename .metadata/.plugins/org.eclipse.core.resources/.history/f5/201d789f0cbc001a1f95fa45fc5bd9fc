package com.model;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Properties;

public class LoginTest {
	
	String id = null;
	int pw;
	
    Connection con = null;
    ResultSet rs = null;
    Statement st = null;
    String sql = null;
    
	String url	= "jdbc:oracle:thin:@localhost:1521:xe";
	String user; 
	String pwd;
	
	int checkIDPW(String id, int pw) {
		this.id = id;
		this.pw = pw;
		int result = 1;

		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");	// 오라클드라이버 로드	
			user = "scott";
			pwd = "1234";
			con = DriverManager.getConnection(url, user, pwd);	// db 연결하고, scott계정 db선택.
			
			sql = "SELECT * FROM member WHERE account ='"+id+"'";
			st = con.createStatement();
			rs = st.executeQuery(sql);	// id를 입력하여 db에 있으면 테이블 자료를 가져옴.
			
			if(rs.next() == false || id.isEmpty() == true) {	// id가 없을때.
				result = 1;										// 1을 반환.
			} else {
				sql = "select * from member where account='" + id;
				rs = st.executeQuery(sql);
				while (rs.next() == true) {
                    if (rs.getString(3).equals(pw)) {	// db의 password와 pw와 같은지 비교
                        result = 0;         			// pw도 같다.
                    } else {                
                        result = 1;						// pw 불일치
                    }
                }
			}
			} catch (SQLException e) {
				System.out.println("문제있음");
				e.printStackTrace();
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		}
	return result;	
	}

}
