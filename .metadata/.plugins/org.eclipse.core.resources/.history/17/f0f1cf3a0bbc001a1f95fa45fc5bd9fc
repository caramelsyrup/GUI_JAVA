package com.model;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Properties;

public class LoginTest {
	
	String id = null;
	int pw;
	
	String sql = null;

    Connection con = null;
    ResultSet rs = null;
    Statement st = null;
    
	String url	= "jdbc:oracle:thin:@localhost:1521:xe";	;
	String user; 
	String pwd;
	
	int checkIDPW(String id, int pw) {
		this.id = id;
		this.pw = pw;
		int result = 1;

		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");	// 오라클드라이버 로드	
			user = "scott";
			pwd = "1234";
			
			con = DriverManager.getConnection(url, user, pwd);	// db 연결하고, scott계정 db선택.
			st = con.createStatement();
			
			if(rs.next() == false || id.isEmpty() == true) {
				result = 1;
			} else {
				sql = "select * from member where account='" + id;
				rs = st.executeQuery(sql);
				while (rs.next() == true) {         
                    if (rs.getString(2).equals(pw)) {
                        result = 0;         
                    } else {                
                        result = 1;
                    }
                }
			}
			
			} catch (SQLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		}
	return result;	
	}

}
